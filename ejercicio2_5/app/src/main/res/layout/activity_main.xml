<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnYahoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:text="@string/btnYahoo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Button>

    <Button
        android:id="@+id/btnBing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/btnBing"
        app:layout_constraintStart_toEndOf="@+id/btnYahoo"
        app:layout_constraintTop_toTopOf="@+id/btnYahoo"></Button>

    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/btnGoogle"
        app:layout_constraintStart_toEndOf="@+id/btnBing"
        app:layout_constraintTop_toTopOf="@+id/btnBing"></Button>

    <ImageView
        android:id="@+id/image"
        android:layout_width="262dp"
        android:layout_height="271dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/bing_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBing" />
</androidx.constraintlayout.widget.ConstraintLayout>